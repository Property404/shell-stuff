# Debian 11 because:
#   It's used on the ephemerals at work
#   It's the base of the current latest RPI OS
FROM debian:11

# This should help cache
RUN apt-get update -y
RUN apt-get upgrade -y
RUN apt-get install -y git tmux moreutils vim gcc curl libssl-dev
RUN curl --tlsv1.3 https://sh.rustup.rs -sSf | sh -s -- -y
RUN apt-get install -y pkg-config
RUN ~/.cargo/bin/cargo install cargo-audit cargo-edit

# Bootstrap actually relies on this:
RUN apt-get install -y sudo

COPY . /workdir
WORKDIR /workdir

RUN ./bootstrap.sh --profile dev --skip-update
CMD bash -l
