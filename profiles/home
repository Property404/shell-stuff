# vim: syntax=bash
# Profile for home laptop/desktop
source ./profiles/workstation

if ! cat /etc/os-release | grep 'ID=fedora' > /dev/null; then
    error "This profile expects fedora"
fi

PACKAGES+=" flatpak "
# Silly stuff
PACKAGES+=" fortune-mod cowsay "
# RPM fusion free
PACKAGES+="  https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm "
# For playing videos
PACKAGES+=" gstreamer1-plugin-openh264 gstreamer1-libav --exclude=gstreamer1-plugins-bad-free-devel lame "

post_bootstrap() {
    # Install Signal
    flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
    flatpak install org.signal.Signal
}
