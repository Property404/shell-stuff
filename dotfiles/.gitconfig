[user]
    email = git@dagans.dev
    name = Property404
[include]
    path="~/.gitconfig_custom"
[alias]
    comit = commit
    commt = commit
    st = status
    br = branch
    sw = switch
    sweet = submodule update --init --recursive
    count = "!f() { git log | grep -E '^commit [0-f0-9]{40}$' | wc -l; }; f"
    gclone = "!f() { git clone git@github.com:Property404/$1.git; }; f"
    forge = "!f() { git commit --amend --no-edit --date \"$(date)\"; }; f"
    # Show git root
    root = "rev-parse --show-toplevel"
    # Execute at git root
    exec = "!exec "
    # Add to .gitexclude file
    exclude = "!f() { echo $1 >> \"$(git root)/.git/info/exclude\"; }; f"
    blast = !git remote | xargs -L1 git push --all
[core]
    excludesFile = ~/.gitexclude
[init]
    defaultBranch = main
[push]
	autoSetupRemote = true
